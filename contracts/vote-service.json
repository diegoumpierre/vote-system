{
  "openapi": "3.0.4",
  "info": {
    "title": "Vote Service API",
    "version": "0.1.0",
    "description": "Vote submission and status checks for the vote system POC."
  },
  "servers": [
    {
      "url": "https://vote-api.vote-system-example.com",
      "description": "Production placeholder"
    }
  ],
  "tags": [
    {
      "name": "Votes",
      "description": "Vote operations"
    }
  ],
  "paths": {
    "/api/v1/votes": {
      "post": {
        "tags": ["Votes"],
        "summary": "Submit a vote asynchronously",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/VoteRequest"
              },
              "examples": {
                "default": {
                  "value": {
                    "electionId": "11111111-1111-1111-1111-111111111111",
                    "candidateId": "22222222-2222-2222-2222-222222222222",
                    "userId": "33333333-3333-3333-3333-333333333333",
                    "captchaToken": "token-abc"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "202": {
            "description": "Vote accepted for processing",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VoteResult"
                }
              }
            }
          },
          "400": {
            "description": "Invalid vote payload",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "429": {
            "description": "Rate limit exceeded",
            "headers": {
              "X-RateLimit-Limit": {
                "schema": {
                  "type": "integer"
                }
              },
              "X-RateLimit-Remaining": {
                "schema": {
                  "type": "integer"
                }
              },
              "X-RateLimit-Reset": {
                "schema": {
                  "type": "integer"
                }
              }
            },
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/votes/status/{userId}": {
      "get": {
        "tags": ["Votes"],
        "summary": "Check if a user has already voted in an election",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "userId",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          },
          {
            "in": "query",
            "name": "electionId",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Vote status",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/VoteStatus"
                }
              }
            }
          },
          "400": {
            "description": "Invalid identifiers",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "VoteRequest": {
        "type": "object",
        "required": ["electionId", "candidateId", "userId"],
        "properties": {
          "electionId": {
            "type": "string",
            "format": "uuid"
          },
          "candidateId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "captchaToken": {
            "type": "string",
            "description": "Required when CAPTCHA is enabled"
          }
        }
      },
      "VoteResult": {
        "type": "object",
        "required": ["voteId", "status", "acceptedAt"],
        "properties": {
          "voteId": {
            "type": "string",
            "format": "uuid"
          },
          "status": {
            "type": "string",
            "example": "accepted"
          },
          "acceptedAt": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "VoteStatus": {
        "type": "object",
        "required": ["electionId", "userId", "hasVoted"],
        "properties": {
          "electionId": {
            "type": "string",
            "format": "uuid"
          },
          "userId": {
            "type": "string",
            "format": "uuid"
          },
          "hasVoted": {
            "type": "boolean"
          },
          "voteId": {
            "type": "string",
            "format": "uuid"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": ["code", "message"],
        "properties": {
          "code": {
            "type": "string",
            "example": "VOTE_VALIDATION_FAILED"
          },
          "message": {
            "type": "string"
          },
          "traceId": {
            "type": "string",
            "description": "Correlation id for troubleshooting"
          }
        }
      }
    }
  }
}
